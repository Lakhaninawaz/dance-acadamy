extends base.pug

block scripts
  script(src='/static/index.js')

block style
  style
      include ./var/task/static/style.css
      include ./var/task/static/styleContact.css

block content
  div.container
    h1 Contact Us
    form(action="/contact", method = "post", class="myForm")
        input(type="text", class="myInput", name="name", placeholder="Enter your name")
        input(type="phone", class="myInput", name="phone", placeholder="Enter your phone")
        input(type="email", class="myInput", name="email", placeholder="Enter your Email ID")
        input(type="address", class="myInput", name="address", placeholder="Enter your address")
        input(type="desc", class="myInput", name="desc", placeholder="Enter your detail")
        button.btn
            | Submit